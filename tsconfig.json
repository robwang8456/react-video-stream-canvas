{
	"compilerOptions": {

		// Default
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"rootDir": ".",
		"skipLibCheck": true,

		// Added
		"jsx": "react",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true,
	},

	"exclude": [
		"**/demo",
	]
}
